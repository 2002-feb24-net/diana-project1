@model LimsGarden.DataAccess.Model.Orders;

@{
    ViewData["Title"] = "Create";
}
<head>
    <style>
        .start {
            padding-bottom: 30px;
        }
    </style>
</head>

<h1 class="start">Start Order:</h1>

<h4>Customer Info</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="LocationId" class="control-label">Location Name</label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">User Name</label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
