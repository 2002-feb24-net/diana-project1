@model LimsGarden.Web.Models.PlantViewModel

<head>
    <style>
        .pad {
            padding-bottom: 40px;
            text-align: center;
        }
    </style>
</head>

<h1 class="pad">Inventory</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.plants.First().PlantName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.plants.First().InventoryCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.plants.First().Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.plants) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlantName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
        </tr>

}
    </tbody>
</table>